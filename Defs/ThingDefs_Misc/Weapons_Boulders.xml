<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseWeapon">
    <defName>Weapon_Boulder</defName>
    <label>Boulder</label>
    <description>Giant Boulders, thrown by Ents.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/entboulderweapon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <statBases>
      <MarketValue>200</MarketValue>
      <Mass>40</Mass>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
      <Weapon_Bulk>5</Weapon_Bulk>
    </statBases>
    <weaponTags>
      <li>EntBoulder</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li>
        <label>throw boulder</label>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>25</range>
        <forcedMissRadius>1.0</forcedMissRadius>
        <warmupTime>5</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>Proj_Boulder</defaultProjectile>
      </li>
    </verbs>
	<comps>
		<li>
		   <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
		</li>
	</comps>
  </ThingDef>

	<ThingDef ParentName="BaseGrenadeProjectile">
		<defName>Proj_Boulder</defName>
		<label>Boulder</label>
		<graphicData>
			<texPath>Things/Projectile/entboulder</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<explosionRadius>1.5</explosionRadius>
			<damageDef>Bomb</damageDef>
			<damageAmountBase>20</damageAmountBase>
			<preExplosionSpawnThingDef>RockRubble</preExplosionSpawnThingDef>
		</projectile>
	</ThingDef>

</Defs>
