<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef>
    <defName>LotR_Entling</defName>
    <label>Ents - The Lone Entling</label>
    <description>You are an Entling, supposedly the last one after the Extermination of all female Ents. Will you be able to build a future for yourself or succumb to the Challenges?</description>
    <scenario>
      <summary>A lone Entling escaped the ravaging Orcs and now walks along his own path.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>EntPlayerTribe</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>1</pawnCount>
          <pawnChoiceCount>1</pawnChoiceCount>
        </li>
		<li Class="ScenPart_PawnFilter_Age">
			<def>PawnFilter_Age</def>
			<allowedAgeRange>16~19</allowedAgeRange>
		</li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
          <visible>false</visible>
        </li>

        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>800</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Ent_Draught</thingDef>
          <count>50</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>HerbalMedicine</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <count>3</count>
		  <animalKind>HuornKind</animalKind>
          <bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
        </li>
		
        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>450</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>300</count>
        </li>      

        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>Steel</thingDef>
          <count>720</count>
        </li>
        
      </parts>
    </scenario>
  </ScenarioDef>

</Defs>
